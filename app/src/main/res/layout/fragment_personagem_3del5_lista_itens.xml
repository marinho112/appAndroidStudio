<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_3del5_lista_itens"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_3del5_lista_itens_titulo_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Itens"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_personagem_3del5_lista_pericias_list"
        app:layout_constraintEnd_toStartOf="@id/textView_3del5_lista_itens_pesoTotal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/textView_3del5_lista_itens_pesoTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginRight="8dp"
        android:text="PesoTotal: 0Kg"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_3del5_lista_itens_titulo_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/textView_3del5_lista_itens_titulo_item"
        app:layout_constraintTop_toTopOf="@+id/textView_3del5_lista_itens_titulo_item" />

    <ListView
        android:id="@+id/fragment_personagem_3del5_lista_pericias_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_3del5_lista_itens_pesoTotal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_lista_pericias_3del5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="20dp"
        android:background="#ff2033"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/fab_adicao" />

</android.support.constraint.ConstraintLayout>
