<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    tools:context=".fragment.fragment_tela_resultado_rolagem" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fragment_tela_resultado_rolagem_imgPrimeiroDado"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@id/fragment_tela_resultado_rolagem_txtSucesso"
            app:layout_constraintEnd_toStartOf="@id/fragment_tela_resultado_rolagem_imgSegundoDado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_tela_resultado_rolagem_txtChance"
            tools:src="@mipmap/ic_dado10lados"
            android:background="@mipmap/ic_dado10lados" />

        <ImageView
            android:id="@+id/fragment_tela_resultado_rolagem_imgSegundoDado"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_tela_resultado_rolagem_imgPrimeiroDado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/fragment_tela_resultado_rolagem_imgPrimeiroDado"
            app:layout_constraintTop_toTopOf="@+id/fragment_tela_resultado_rolagem_imgPrimeiroDado"
            tools:src="@mipmap/ic_dado10lados"
            android:background="@mipmap/ic_dado10lados"/>

        <TextView
            android:id="@+id/fragment_tela_resultado_rolagem_txtSucesso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Sucesso !"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fragment_tela_resultado_rolagem_imgSegundoDado"
            app:layout_constraintStart_toStartOf="@+id/fragment_tela_resultado_rolagem_imgPrimeiroDado"
            app:layout_constraintTop_toBottomOf="@+id/fragment_tela_resultado_rolagem_imgPrimeiroDado" />

        <TextView
            android:id="@+id/fragment_tela_resultado_rolagem_txtChance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Chance de Sucesso: 100%"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/fragment_tela_resultado_rolagem_imgPrimeiroDado"
            app:layout_constraintEnd_toEndOf="@+id/fragment_tela_resultado_rolagem_imgSegundoDado"
            app:layout_constraintStart_toStartOf="@+id/fragment_tela_resultado_rolagem_imgPrimeiroDado"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_tela_resultado_rolagem_txtPrimeiroDado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="37sp"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintVertical_bias="0.42"
            app:layout_constraintStart_toStartOf="@id/fragment_tela_resultado_rolagem_imgPrimeiroDado"
            app:layout_constraintEnd_toEndOf="@id/fragment_tela_resultado_rolagem_imgPrimeiroDado"
            app:layout_constraintTop_toTopOf="@id/fragment_tela_resultado_rolagem_imgPrimeiroDado"
            app:layout_constraintBottom_toBottomOf="@id/fragment_tela_resultado_rolagem_imgPrimeiroDado"/>


        <TextView
            android:id="@+id/fragment_tela_resultado_rolagem_txtSegundoDado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="37sp"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintVertical_bias="0.42"
            app:layout_constraintStart_toStartOf="@id/fragment_tela_resultado_rolagem_imgSegundoDado"
            app:layout_constraintEnd_toEndOf="@id/fragment_tela_resultado_rolagem_imgSegundoDado"
            app:layout_constraintTop_toTopOf="@id/fragment_tela_resultado_rolagem_imgSegundoDado"
            app:layout_constraintBottom_toBottomOf="@id/fragment_tela_resultado_rolagem_imgSegundoDado"/>


    </android.support.constraint.ConstraintLayout>



</FrameLayout>