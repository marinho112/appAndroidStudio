<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.fragment_jogada_pericia_3del5">

    <Button
        android:id="@+id/btn_rollar_jogada_pericia_3del5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Rolar"
        app:layout_constraintStart_toEndOf="@id/textView_jogada_pericia_3del5_chance_final"
        app:layout_constraintTop_toTopOf="@id/textView_jogada_pericia_3del5_chance_final"
        app:layout_constraintBottom_toBottomOf="@id/textView_jogada_pericia_3del5_chance_final"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/editText_jogada_pericia_3del5_bonus_numerico"
        android:layout_width="@dimen/tamanho_editText_jogada_pericia_3del5"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:maxLength="4"
        app:layout_constraintEnd_toEndOf="@id/textView_jogada_pericia_3del5_bonus"
        app:layout_constraintStart_toStartOf="@id/textView_jogada_pericia_3del5_bonus"
        app:layout_constraintTop_toBottomOf="@id/textView_jogada_pericia_3del5_bonus" />

    <EditText
        android:id="@+id/editText_jogada_pericia_3del5_bonus_percentual"
        android:layout_width="@dimen/tamanho_editText_jogada_pericia_3del5"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:maxLength="4"
        app:layout_constraintEnd_toEndOf="@id/textView_jogada_pericia_3del5_bonus_percentual"
        app:layout_constraintStart_toStartOf="@id/textView_jogada_pericia_3del5_bonus_percentual"
        app:layout_constraintTop_toBottomOf="@id/textView_jogada_pericia_3del5_bonus_percentual" />

    <EditText
        android:id="@+id/editText_jogada_pericia_3del5_total_teste"
        android:layout_width="@dimen/tamanho_editText_jogada_pericia_3del5"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:enabled="true"
        android:focusable="false"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="@id/textView_jogada_pericia_3del5_valor_total"
        app:layout_constraintStart_toStartOf="@id/textView_jogada_pericia_3del5_valor_total"
        app:layout_constraintTop_toBottomOf="@id/textView_jogada_pericia_3del5_valor_total" />

    <EditText
        android:id="@+id/editText_jogada_pericia_3del5_dificuldade"
        android:layout_width="@dimen/tamanho_editText_jogada_pericia_3del5"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:maxLength="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/textView_jogada_pericia_3del5_dificuldade"
        app:layout_constraintStart_toStartOf="@id/textView_jogada_pericia_3del5_dificuldade"
        app:layout_constraintTop_toBottomOf="@id/textView_jogada_pericia_3del5_dificuldade" />

    <Spinner
        android:id="@+id/spinner_jogada_pericia_3del5_atributo_principal"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/textView_jogada_pericia_3del5_atributo_principal"
        app:layout_constraintTop_toBottomOf="@id/textView_jogada_pericia_3del5_atributo_principal"
        app:layout_constraintBottom_toTopOf="@id/textView_jogada_pericia_3del5_atributo_secundario"/>

    <Spinner
        android:id="@+id/spinner_jogada_pericia_3del5_atributo_secundario"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/textView_jogada_pericia_3del5_atributo_secundario"
        app:layout_constraintTop_toBottomOf="@id/textView_jogada_pericia_3del5_atributo_secundario"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textView_jogada_pericia_3del5_atributo_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView_jogada_pericia_3del5_atributo_secundario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secundário"
        app:layout_constraintTop_toTopOf="@id/textView_jogada_pericia_3del5_dificuldade"
        app:layout_constraintStart_toStartOf="@id/textView_jogada_pericia_3del5_atributo_principal"/>

    <TextView
        android:id="@+id/textView_jogada_pericia_3del5_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bônus"
        app:layout_constraintStart_toEndOf="@id/spinner_jogada_pericia_3del5_atributo_principal"
        app:layout_constraintTop_toTopOf="@id/textView_jogada_pericia_3del5_atributo_principal"
        app:layout_constraintEnd_toStartOf="@id/editText_jogada_pericia_3del5_bonus_percentual"/>

    <TextView
        android:id="@+id/textView_jogada_pericia_3del5_bonus_percentual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bônus %"
        app:layout_constraintTop_toTopOf="@id/textView_jogada_pericia_3del5_atributo_principal"
        app:layout_constraintStart_toEndOf="@id/editText_jogada_pericia_3del5_bonus_numerico"
        app:layout_constraintEnd_toStartOf="@id/editText_jogada_pericia_3del5_total_teste"/>

    <TextView
        android:id="@+id/textView_jogada_pericia_3del5_valor_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        app:layout_constraintTop_toTopOf="@id/textView_jogada_pericia_3del5_atributo_principal"
        app:layout_constraintStart_toEndOf="@id/editText_jogada_pericia_3del5_bonus_percentual"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView_jogada_pericia_3del5_dificuldade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dificuldade"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/editText_jogada_pericia_3del5_bonus_numerico"
        app:layout_constraintStart_toEndOf="@id/spinner_jogada_pericia_3del5_atributo_secundario"
        app:layout_constraintEnd_toStartOf="@id/textView_jogada_pericia_3del5_chance_final"
        app:layout_constraintBottom_toTopOf="@id/editText_jogada_pericia_3del5_dificuldade"/>

    <TextView
        android:id="@+id/textView_jogada_pericia_3del5_chance_final"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:clickable="true"
        android:text="100.0%"
        app:layout_constraintBottom_toBottomOf="@id/editText_jogada_pericia_3del5_dificuldade"
        app:layout_constraintEnd_toStartOf="@id/btn_rollar_jogada_pericia_3del5"
        app:layout_constraintStart_toEndOf="@id/textView_jogada_pericia_3del5_dificuldade"
        app:layout_constraintTop_toTopOf="@id/textView_jogada_pericia_3del5_dificuldade" />

</android.support.constraint.ConstraintLayout>